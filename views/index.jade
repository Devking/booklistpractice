extends layout

block content
  script(src='/javascripts/buttons.js')

  h1 create book
  hr

  form(action='/books', method='post')
    label(for='title') title
    input(name='title')
    button(type='submit') Submit

  hr
  h1 List of books
  each book in books
    div(class="book-entry book-#{book.id}")= book.title
      span(class="close", onclick="deleteBook(#{book.id})") x
